@model IEnumerable<EventManagementSystem.Models.Event>

@{
    ViewData["Title"] = "Предстоящи събития";
    var totalPages = (int)ViewBag.TotalPages;
    var currentPage = (int)ViewBag.CurrentPage;
    var searchTerm = ViewBag.SearchTerm as string;
    var categoryId = ViewBag.CategoryId as int?;
}

<div class="d-flex justify-content-between align-items-center mb-5">
    <div class="text-start">
        <h1 class="display-5">@ViewData["Title"]</h1>
        <p class="lead text-secondary">Разгледай и намери твоето следващо преживяване</p>
    </div>
    @if (User.IsInRole("Administrator"))
    {
        <div>
            <a asp-area="Admin" asp-controller="AdminEvent" asp-action="Create" class="uiverse-btn">
                Създай ново събитие
            </a>
        </div>
    }
</div>

<div class="card card-glassmorphism p-3 mb-5">
    <form asp-action="Index" method="get" class="row g-3 align-items-center">
        <div class="col-md-6">
            <input type="text" name="searchTerm" value="@searchTerm" class="form-control" placeholder="Търси по име, описание..." />
        </div>
        <div class="col-md-4">
            <select name="categoryId" asp-items="@ViewBag.Categories" class="form-select">
                <option value="">Всички категории</option>
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="uiverse-btn w-100" style="padding: 1em 1.2em;"><i class="fa fa-search me-2"></i>Търси</button>
        </div>
    </form>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 card-glassmorphism event-card">
                <img src="@(item.ImageUrl ?? "/images/default-event.jpg")" class="card-img-top event-card-img" alt="@item.Name">
                <div class="card-body d-flex flex-column">
                    <div class="flex-grow-1">
                        <span class="badge bg-primary mb-2">@item.Category.Name</span>
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text text-secondary">
                            <i class="fa-solid fa-calendar-days me-2"></i>@item.Date.ToString("dd MMM yyyy")
                            <br />
                            <i class="fa-solid fa-location-dot me-2"></i>@item.Location
                        </p>
                    </div>
                    <div class="mt-3 d-flex justify-content-between align-items-center">
                        <div>
                            <a asp-controller="Event" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Детайли</a>
                            @if (User.IsInRole("Administrator"))
                            {
                                <a asp-area="Admin" asp-controller="AdminEvent" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Редактирай</a>
                                <a asp-area="Admin" asp-controller="AdminEvent" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Изтрий</a>
                            }
                        </div>
                        <div>
                            <a href="#" class="favorite-btn" data-event-id="@item.Id" title="Добави в любими">
                                <i class="fa-regular fa-heart"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (totalPages > 1)
{
    <nav>
        <ul class="pagination justify-content-center mt-4">
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-searchTerm="@searchTerm" asp-route-categoryId="@categoryId">@i</a>
                </li>
            }
        </ul>
    </nav>
}