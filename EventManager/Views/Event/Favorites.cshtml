@model IEnumerable<EventManagementSystem.Models.Event>

@{
    ViewData["Title"] = "Любими събития";
}

<div class="text-start mb-5">
    <h1 class="display-5">@ViewData["Title"]</h1>
    <p class="lead text-secondary">Списък със събитията, които сте харесали.</p>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Все още нямате любими събития. Можете да добавите, като натиснете иконата ❤️ на някое събитие.
    </div>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 card-glassmorphism event-card">
                    <img src="@(item.ImageUrl ?? "/images/default-event.jpg")" class="card-img-top event-card-img" alt="@item.Name">
                    <div class="card-body d-flex flex-column">
                        <div class="flex-grow-1">
                            <span class="badge bg-primary mb-2">@item.Category.Name</span>
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text text-secondary">
                                <i class="fa-solid fa-calendar-days me-2"></i>@item.Date.ToString("dd MMM yyyy")
                                <br />
                                <i class="fa-solid fa-location-dot me-2"></i>@item.Location
                            </p>
                        </div>
                        <div class="mt-3 d-flex justify-content-between align-items-center">
                            <div>
                                <a asp-controller="Event" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">Детайли</a>
                            </div>
                            <div>
                                <a href="#" class="favorite-btn active" data-event-id="@item.Id" title="Премахни от любими">
                                    <i class="fa-regular fa-heart"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <script>
        document.querySelectorAll('.favorite-btn').forEach(button => {
            button.addEventListener('click', function(e) {
                setTimeout(() => {
                    window.location.reload();
                }, 200);
            });
        });
    </script>
}