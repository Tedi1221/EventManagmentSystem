@model Event
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager

@{
    ViewData["Title"] = Model.Name;
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}


<div class="card card-glassmorphism">
    <div class="row g-0">
        <div class="col-lg-5">
            <img src="@Model.ImageUrl" class="details-img" alt="@Model.Name">
        </div>
        <div class="col-lg-7">
            <div class="card-body p-4">
                <span class="badge bg-primary mb-2 fs-6">@Model.Category.Name</span>
                <h1 class="card-title">@Model.Name</h1>
                <hr />
                <p class="fs-5"><i class="fa-solid fa-calendar-days text-primary me-2"></i><strong>Дата:</strong> @Model.Date.ToString("dd MMMM yyyy, HH:mm")</p>
                <p class="fs-5"><i class="fa-solid fa-location-dot text-primary me-2"></i><strong>Място:</strong> @Model.Location</p>
                <p class="fs-5"><i class="fa-solid fa-users text-primary me-2"></i><strong>Макс. участници:</strong> @Model.MaxParticipants</p>

                <h4 class="mt-4">Описание</h4>
                <p class="card-text">@Model.Description</p>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <div>
                        <span class="h2 fw-bold text-primary">@Model.Price.ToString("C")</span>
                    </div>
                    <div class="d-flex align-items-center">

                        @if (SignInManager.IsSignedIn(User))
                        {
                            if (!User.IsInRole("Administrator"))
                            {
                                <form asp-controller="Event" asp-action="Register" method="post" class="me-2">
                                    <input type="hidden" name="eventId" value="@Model.Id" />
                                    <button type="submit" class="btn btn-success"><i class="fa fa-ticket-alt me-2"></i>Запиши се</button>
                                </form>
                            }
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Context.Request.Path" class="btn btn-success me-2">
                                <i class="fa fa-ticket-alt me-2"></i>Запиши се (изисква вход)
                            </a>
                        }

                        @if (User.IsInRole("Administrator"))
                        {
                            <a asp-area="Admin" asp-controller="AdminEvent" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fa fa-edit me-2"></i>Редактирай</a>

                            <a asp-area="Admin" asp-controller="AdminEvent" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger ms-2"><i class="fa fa-trash me-2"></i>Изтрий</a>
                        }
                        <a asp-action="Index" class="btn btn-secondary ms-2"><i class="fa fa-arrow-left me-2"></i>Обратно</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>