@model Event
@{
    ViewData["Title"] = Model.Name;
}

<h1>@Model.Name</h1>

<div>
    <h4>Детайли за събитието</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Описание</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Дата и час</dt>
        <dd class="col-sm-10">@Model.Date.ToString("dd.MM.yyyy HH:mm")</dd>

        <dt class="col-sm-2">Място</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Категория</dt>
        <dd class="col-sm-10">@Model.Category.Name</dd>

        <dt class="col-sm-2">Цена</dt>
        <dd class="col-sm-10">@Model.Price.ToString("F2") лв.</dd>

        <dt class="col-sm-2">Макс. участници</dt>
        <dd class="col-sm-10">@Model.MaxParticipants</dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Administrator"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Редактирай</a>
    }
    <a asp-action="Index" class="btn btn-secondary">Обратно към списъка</a>
</div>