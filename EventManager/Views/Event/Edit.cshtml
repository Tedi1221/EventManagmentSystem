@model EventFormViewModel
@{
    ViewData["Title"] = "Редактирай събитие";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <partial name="_EventFormPartial" model="Model" />
            <div class="form-group mt-3">
                <input type="submit" value="Запази" class="uiverse-btn" />
                <a asp-action="Index" class="uiverse-btn-secondary">Отказ</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}