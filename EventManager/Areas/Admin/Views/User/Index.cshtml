@model IEnumerable<EventManagementSystem.Models.User>

@{
    ViewData["Title"] = "Управление на потребители";
}

<div class="card card-glassmorphism">
    <div class="card-body">
        <h1 class="card-title">@ViewData["Title"]</h1>
        <hr />
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Потребителско име</th>
                    <th>Имейл</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>
                            <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-warning" title="Редактирай роли"><i class="fa fa-user-shield"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary mt-3">
            <i class="fa fa-arrow-left me-2"></i>Обратно към панела
        </a>
    </div>
</div>