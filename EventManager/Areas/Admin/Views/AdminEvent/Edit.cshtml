@model EventManagementSystem.Models.EventFormViewModel
@{
    ViewData["Title"] = "Редактирай събитие";
}

<div class="card card-glassmorphism">
    <div class="card-body p-4">
        <h1 class="card-title">@ViewData["Title"]</h1>
        <hr style="border-color: var(--border-color);" />
        <div class="row">
            <div class="col-md-8">
                <form asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <partial name="_EventFormPartial" model="Model" />
                    <div class="form-group mt-4">
                        <input type="submit" value="Запази промените" class="uiverse-btn" />
                        <a asp-action="Index" asp-controller="AdminEvent" class="uiverse-btn-secondary">Отказ</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}